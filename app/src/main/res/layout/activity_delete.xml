<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeleteActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".AddActivity">


        <TextView
            android:id="@+id/deleteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15" />

        <Button
            android:id="@+id/buttonYesDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deleteText"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/margin_all"
            android:layout_marginLeft="@dimen/margin_all"
            android:onClick="confirmInput"
            android:text="@string/confirmLabel" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rejectLabel"
            android:id="@+id/buttonNoDelete"
            android:layout_below="@+id/deleteText"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_all"
            android:layout_marginRight="@dimen/margin_all"
            android:onClick="rejectInput"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>